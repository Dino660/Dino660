local Replica_upvw = _G.Replica
if not Replica_upvw then
	repeat
		task.wait()
		Replica_upvw = _G.Replica
	until Replica_upvw
end

local function formatTime(seconds)
	local minutes = math.floor(seconds / 60)
	local secs = seconds % 60
	return string.format("%02i:%02i", minutes, secs)
end

-- Ubicaci√≥n del TextLabel que muestra la cuenta regresiva
local textLabel = game:GetService("Players").LocalPlayer.PlayerGui.HalloweenBoss.Candy.NextReward

local var3 = 30 - Replica_upvw.Data.Playtime % 30
textLabel.Text = "Next reward in " .. formatTime(var3)

Replica_upvw:ListenToChange("Playtime", function()
	local var2 = 30 - Replica_upvw.Data.Playtime % 30
	textLabel.Text = "Next reward in " .. formatTime(var2)
end)
